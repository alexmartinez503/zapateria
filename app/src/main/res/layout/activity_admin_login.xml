<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".adminLoginActivity">

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR SESION ADMIN"
        android:textAlignment="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="25dp"
        app:srcCompat="@drawable/login1" />


    <EditText
        android:id="@+id/numeroadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/texto"
        android:hint="Ingrese su numero"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/codigoadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/texto"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:hint="Ingrese el codigo recibido"
        android:padding="10dp"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="18dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/enviarnumeroadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numeroadmin"
        android:layout_margin="22dp"
        android:background="@drawable/botones1"
        android:text="enviar codigo"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <Button
        android:id="@+id/enviarcodigoadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codigoadmin"
        android:text="Confirmar"
        android:layout_margin="22dp"
        android:background="@drawable/botones1"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone"/>


</RelativeLayout>