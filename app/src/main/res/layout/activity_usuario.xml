<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuarioActivity"
    android:background="@color/black"
    android:orientation="vertical">
    <TextView
        android:id="@+id/usuario_titilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#1E3B55"
        android:text="REGISTRO"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/usuario_imageView7"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/usuario_titilo"
        app:srcCompat="@drawable/login1" />


    <EditText
        android:id="@+id/usuario_txtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario_imageView7"
        android:background="@drawable/black"
        android:hint="Nombre completo"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/usuario_txtphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario_txtnombre"
        android:background="@drawable/black"
        android:padding="12dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:hint="Telefono"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/usuario_txtcorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario_txtphone"
        android:background="@drawable/black"
        android:hint="Correo electrónico"
        android:padding="12dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/usuario_txtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_txtcorreo"
        android:background="@drawable/black"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="22dp" />

    <Button
        android:id="@+id/usuario_guardarbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones2"
        android:layout_below="@+id/usuario_txtpassword"
        android:text="guardar"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        />


</RelativeLayout>